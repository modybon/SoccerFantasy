@model SoccerFantasy.Models.ViewModels.FixturesViewModel
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        .center {
            margin: auto;
            width: 30%;
        }
    </style>
</head>
<body>
    @await Component.InvokeAsync("TeamPageHeader", Model.team)
    @foreach (Match match in Model.matches.OrderByDescending(m=> DateTime.Parse(m.date)))
    {
        <div class="center row" style="text-align : center; margin:auto; width:50%;">
            <div class="row">
                <div class="row" style="text-align:center; margin: auto; justify-content:center">
                    @match.date
                </div>
                <div class="center col">
                    <div>
                        <img src="@match.homeTeam.clubLogo" width="40" height="40" />
                    </div>
                    <div>
                        @match.homeTeamName
                    </div>
                </div>
                <div class="col" style="text-align:center; margin:auto">
                    VS
                </div>
                <div class="center col">
                    <div>
                        <img src="@match.awayTeam.clubLogo" width="40" height="40" />
                    </div>
                    <div>
                        @match.awayTeamName
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>

