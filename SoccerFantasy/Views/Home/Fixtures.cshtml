@model List<SoccerFantasy.Models.Match>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <button onclick="simulateMatches()">
        Simulate Matches
    </button>
    <h2 class="container text-center mb-3">@(Model.FirstOrDefault()?.date ?? "") </h2>
    @foreach (Match match in Model)
    {
        <div class="container">
            <div class="row mb-2">
                <div class="col-4 text-center">
                    <div>
                        <img src="@match.homeTeam.clubLogo" class="img-fluid" alt="Home Team Logo" width="40" height="40" />
                    </div>
                    <div>
                        @match.homeTeamName
                    </div>
                </div>
                <div class="col text-center">
                    <div class="row">
                        <div class="col">
                            <div>VS</div>
                        </div>
                    </div>
                </div>

                <div class="col-4 text-center">
                    <div>
                        <img src="@match.awayTeam.clubLogo" class="img-fluid" alt="Away Team Logo" width="40" height="40" />
                    </div>
                    <div>
                        @match.awayTeamName
                    </div>
                </div>
            </div>
        </div>
    }
</body>
</html>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>function simulateMatches() {
        $.ajax({
            type: "GET",
            url: `https://localhost:7274/Home/SimulateMatches`,
            success: function (response) {
                console.log(response);
                location.reload();
            },
            error: function (error) {
                console.log(error);
            }
        })
    }</script>


