@model SoccerFantasy.Models.ViewModels.FantasyIndexViewModel
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        .full-width-link {
            display: block;
            width: 100%;
            height: 100%;
            text-decoration: none; /* Remove default link styling if needed */
            color: inherit; /* Inherit the color from the parent */
        }
    </style>
</head>
<body>
    @if (CurrentUser.Instance == null)
    {
        <div class="text-center">
            <div class="row">
                <h3>Welcome to Fantasy</h3>
            </div>
            <div class="row">
                @Html.ActionLink("Sign in", "SignIn", null)
                @Html.ActionLink("I need to Register", "Register", null)
            </div>
        </div>
    }
    else
    {
        <div class="text-center mb-4">
            <div class="mb-3">
                <h4>@CurrentUser.Instance.username</h4>
            </div>
            <div class="row">
                <div class="col">
                    <h5>@Model.averageRoundPoints</h5>
                    <h6>Average</h6>
                </div>
                <div class="col">
                    <h5>@CurrentUser.Instance.fantasyTeam.current_round_points</h5>
                    <h6>Points</h6>
                </div>
                <div class="col">
                    <h5>@Model.highestRoundPoints</h5>
                    <h6>Highest</h6>
                </div>
            </div>
        </div>
        <div class="row text-center">
            <div class="col">
                <a class="btn btn-primary" href="https://localhost:7274/Fantasy/PickTeam">View / Pick Team</a>
            </div>
        </div>
    }
</body>
</html>
